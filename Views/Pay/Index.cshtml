@using PaymentGateway.Models;
@using Shared.Extensions;
@model PaymentGateway.Models.Merchant.MerchantDetails
@{
    ViewBag.Title = "Pay Online to " + Model.CompanyName;
}
<link href="https://cdn.paysecurely.online/assets/css/pages/wizard/wizard-5.css" rel="stylesheet" type="text/css" />

<div class="card card-custom">
    <!--begin::Card Body-->
    <div class="card-body p-0">
        <!--begin::Wizard 5-->
        <div class="wizard wizard-5 d-flex flex-column flex-lg-row flex-row-fluid" id="kt_wizard" data-wizard-state="first">
            <!--begin::Aside-->
            <div class="wizard-aside bg-white d-flex flex-column flex-row-auto w-100 w-lg-300px w-xl-400px w-xxl-500px">
                <!--begin::Aside Top-->
                <div class="d-flex  flex-column px-xxl-30 px-10">
                    <!--begin: Wizard Nav-->
                    <div class="wizard-nav d-flex d-flex justify-content-center pt-10 pt-lg-20 pb-5">
                        <!--begin::Wizard Steps-->
                        <div class="wizard-steps">
                            <!--begin::Wizard Step 1 Nav-->
                            <div class="wizard-step" data-wizard-type="step" data-wizard-state="current">
                                <div class="wizard-wrapper">
                                    <div class="wizard-icon">
                                        <i class="wizard-check ki ki-check"></i>
                                        <span class="wizard-number">1</span>
                                    </div>
                                    <div class="wizard-label">
                                        <h3 class="wizard-title">Vendor Details</h3>
                                        <div class="wizard-desc">Whom you are going to Pay</div>
                                    </div>
                                </div>
                            </div>
                            <!--end::Wizard Step 1 Nav-->
                            <!--begin::Wizard Step 2 Nav-->
                            <div class="wizard-step" data-wizard-type="step" data-wizard-state="pending">
                                <div class="wizard-wrapper">
                                    <div class="wizard-icon">
                                        <i class="wizard-check ki ki-check"></i>
                                        <span class="wizard-number">2</span>
                                    </div>
                                    <div class="wizard-label">
                                        <h3 class="wizard-title">Personnal Details</h3>
                                        <div class="wizard-desc">My Details </div>
                                    </div>
                                </div>
                            </div>
                            <!--end::Wizard Step 2 Nav-->
                            <!--begin::Wizard Step 3 Nav-->
                            <div class="wizard-step" data-wizard-type="step" data-wizard-state="pending">
                                <div class="wizard-wrapper">
                                    <div class="wizard-icon">
                                        <i class="wizard-check ki ki-check"></i>
                                        <span class="wizard-number">3</span>
                                    </div>
                                    <div class="wizard-label">
                                        <h3 class="wizard-title">Terms&nbsp;Conditions</h3>
                                        <div class="wizard-desc">Review and Pay</div>
                                    </div>
                                </div>
                            </div>
                            <!--end::Wizard Step 3 Nav-->
                        </div>
                        <!--end::Wizard Steps-->
                    </div>
                    <!--end: Wizard Nav-->
                </div>
                <!--end::Aside Top-->
                <!--begin::Aside Bottom-->
                <div class="d-flex flex-row-auto bgi-no-repeat bgi-position-y-bottom bgi-position-x-center bgi-size-contain pt-2 pt-lg-5 h-350px"
                     style="background-image: url(@Model.ImageFile)"></div>
                <!--end::Aside Bottom-->
            </div>
            <!--begin::Aside-->
            <!--begin::Content-->
            <div class="wizard-content bg-gray-100 d-flex flex-column flex-row-fluid py-15 px-5 px-lg-10">
                <!--begin::Title-->
                <div class="text-right mb-lg-5 mb-15 mr-xxl-10">
                    <span class="font-weight-bold text-muted font-size-h5">Facing Issues?</span>
                    <span class="font-weight-bolder text-primary font-size-h4">Contact @Model.CompanyName Now</span>
                </div>
                <!--end::Title-->
                <!--begin::Form-->
                <div class="d-flex justify-content-center flex-row-fluid">
                    @using (Html.BeginForm("PayMerchant", "MakePayment", FormMethod.Post, new { @class = "pb-5 w-100 w-md-450px w-lg-500px fv-plugins-bootstrap fv-plugins-framework", novalidate = "novalidate", id = "kt_form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.SecureHiddenFor(f => f.DummyData)
                        @Html.SecureHiddenFor(f => f.AgentCode)
                        @Html.SecureHiddenFor(f => f.AgentId)
                        @Html.SecureHiddenFor(f => f.RequestId)
                        @Html.SecureHiddenFor(f => f.Dealer)
                        <!--begin: Wizard Step 1-->
                        <div class="pb-5" data-wizard-type="step-content" data-wizard-state="current">
                            <!--begin::Title-->
                            <div class="pb-8 pb-lg-8">
                                <h3 class="font-weight-bolder text-dark font-size-h2">Make Payment</h3>
                                <div class="text-muted font-weight-bold font-size-h5">
                                    Kindly Verify Vendor Details Below making payment
                                </div>
                            </div>
                            <!--begin::Title-->
                            @Html.Partial("PayPage/_DislayFieldsOnPayPage", new Tuple<string, string>("Vendor Name:", @Model.CompanyName))
                            @Html.Partial("PayPage/_DislayFieldsOnPayPage", new Tuple<string, string>("Address Line 1:", @Model.AddressLine1))
                            @Html.Partial("PayPage/_DislayFieldsOnPayPage", new Tuple<string, string>("Address Line 2:", @Model.AddressLine2))
                            @Html.Partial("PayPage/_DislayFieldsOnPayPage", new Tuple<string, string>("City:", @Model.City))
                            @Html.Partial("PayPage/_DislayFieldsOnPayPage", new Tuple<string, string>("State:", @Model.State))
                            @Html.Partial("PayPage/_DislayFieldsOnPayPage", new Tuple<string, string>("Zip Code:", @Model.zipCode))
                            @Html.Partial("PayPage/_DislayFieldsOnPayPage", new Tuple<string, string>("Contact Number:", @Model.MerchantContactNumber))
                            @Html.Partial("PayPage/_DislayFieldsOnPayPage", new Tuple<string, string>("Email Address:", @Model.EmailAddress))

                        </div>
                        <!--end: Wizard Step 1-->
                        <!--begin: Wizard Step 2-->
                        <div class="pb-5" data-wizard-type="step-content">
                            <!--begin::Title-->
                            <div class="pb-10 pb-lg-15">
                                <h3 class="font-weight-bolder text-dark font-size-h2">Personnal Details</h3>
                                <div class="text-primary font-weight-bolder">
                                    Below details will be shared with the Vendor
                                </div>
                            </div>
                            <!--end::Title-->
                            <!--begin::Form Group-->
                            <div class="form-group fv-plugins-icon-container">
                                <label class="font-size-h6 font-weight-bolder text-dark">First Name</label>
                                @Html.TextBoxFor(f => f.FirstName, new { type = "text", @class = "form-control h-auto p-5 border-0 rounded-lg font-size-h6", name = "FirstName", placeholder = "First Name" })
                                <div class="fv-plugins-message-container"></div>
                            </div>

                            <div class="form-group fv-plugins-icon-container">
                                <label class="font-size-h6 font-weight-bolder text-dark">Last Name</label>
                                @Html.TextBoxFor(f => f.LastName, new { type = "text", @class = "form-control h-auto p-5 border-0 rounded-lg font-size-h6", name = "LastName", placeholder = "Last Name" })
                                <div class="fv-plugins-message-container"></div>
                            </div>

                            <div class="form-group fv-plugins-icon-container">
                                <label class="font-size-h6 font-weight-bolder text-dark">Mobile Number</label>
                                @Html.TextBoxFor(f => f.MobileNumber, new { type = "number", @class = "form-control h-auto p-5 border-0 rounded-lg font-size-h6", name = "MobileNumber", placeholder = "Mobile Number" })

                                <div class="fv-plugins-message-container"></div>
                            </div>

                            <div class="form-group fv-plugins-icon-container">
                                <label class="font-size-h6 font-weight-bolder text-dark">Email Address</label>
                                @Html.TextBoxFor(f => f.EmailAddress, new { type = "email", @class = "form-control h-auto p-5 border-0 rounded-lg font-size-h6", name = "EmailAddress", placeholder = "EmailAddress" })
                                <div class="fv-plugins-message-container"></div>
                            </div>
                            <div class="form-group fv-plugins-icon-container">
                                <label class="font-size-h6 font-weight-bolder text-dark">Note to Vendor</label>
                                @Html.TextBoxFor(f => f.CustomerNote, new { type = "text", @class = "form-control h-auto p-5 border-0 rounded-lg font-size-h6", name = "CustomerNote", placeholder = "Message to vendor" })
                                <div class="fv-plugins-message-container"></div>
                            </div>
                            <!--begin::Form Group-->
                        </div>
                        <!--end: Wizard Step 2-->
                        <!--begin: Wizard Step 3-->
                        <div class="pb-5" data-wizard-type="step-content">
                            <!--begin::Title-->
                            <div class="pb-10 pb-lg-10">
                                <h3 class="font-weight-bolder text-dark font-size-h2">Terms &nbsp; Conditions</h3>
                                <div class="text-muted font-weight-bold font-size-h4">Confirm Paysecurely.online Terms &nbsp; Conditions to Pay</div>
                            </div>

                            @Html.Partial("_TermsAndConditionModalPopUp")


                            <div class="form-group fv-plugins-icon-container">
                                <label class="font-size-h6 font-weight-bolder text-dark">Amount</label>
                                @Html.TextBoxFor(f => f.Amount, new { type = "number", @class = "form-control h-auto p-5 border-0 rounded-lg font-size-h6", name = "amount", placeholder = "Amount to Pay" })
                                <div class="fv-plugins-message-container"></div>
                            </div>

                            <div class="form-group fv-plugins-icon-container">
                                <label class="checkbox checkbox-outline checkbox-outline-2x checkbox-primary">
                                    @Html.CheckBoxFor(f => f.AgreeCheckBox, new { name = "AgreeCheckBox" })
                                    <span></span>
                                    I have carefully read the said terms and conditions, understood and hereby agree & accept the same. I also confirm the details of payment requested by the Vendor and agree to pay  for the said purchases.
                                </label>
                                <div class="fv-plugins-message-container"></div>
                            </div>
                            @Html.TextBoxFor(f => f.Check1, new { @class = "d-none" })
                            @Html.TextBoxFor(f => f.Check2, new { @class = "d-none" })
                            @Html.CheckBoxFor(f => f.ConfirmCheckBox, new { @class = "d-none" })
                            @Html.ReCaptchaValidationMessage()
                            @Html.ReCaptchaHidden()
                            @Html.ReCaptchaJS()

                            <!--end::Title-->
                            <!--begin::Section-->
                            <!--end::Section-->
                        </div>
                        <!--end: Wizard Step 3-->
                        <!--begin: Wizard Actions-->
                        <div class="d-flex justify-content-between pt-3">
                            <div class="mr-2">
                                <button type="button" class="btn btn-light-primary font-weight-bolder font-size-h6 pl-6 pr-8 py-4 my-3 mr-3" data-wizard-type="action-prev">
                                    <span class="svg-icon svg-icon-md mr-1">
                                        <!--begin::Svg Icon | path:assets/media/svg/icons/Navigation/Left-2.svg-->
                                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                <polygon points="0 0 24 0 24 24 0 24"></polygon>
                                                <rect fill="#000000" opacity="0.3" transform="translate(15.000000, 12.000000) scale(-1, 1) rotate(-90.000000) translate(-15.000000, -12.000000)" x="14" y="7" width="2" height="10" rx="1"></rect>
                                                <path d="M3.7071045,15.7071045 C3.3165802,16.0976288 2.68341522,16.0976288 2.29289093,15.7071045 C1.90236664,15.3165802 1.90236664,14.6834152 2.29289093,14.2928909 L8.29289093,8.29289093 C8.67146987,7.914312 9.28105631,7.90106637 9.67572234,8.26284357 L15.6757223,13.7628436 C16.0828413,14.136036 16.1103443,14.7686034 15.7371519,15.1757223 C15.3639594,15.5828413 14.7313921,15.6103443 14.3242731,15.2371519 L9.03007346,10.3841355 L3.7071045,15.7071045 Z" fill="#000000" fill-rule="nonzero" transform="translate(9.000001, 11.999997) scale(-1, -1) rotate(90.000000) translate(-9.000001, -11.999997)"></path>
                                            </g>
                                        </svg>
                                        <!--end::Svg Icon-->
                                    </span>Previous
                                </button>
                            </div>
                            <div>
                                <button type="button" class="btn btn-primary font-weight-bolder font-size-h6 pl-5 pr-8 py-4 my-3" data-wizard-type="action-submit">
                                    Submit
                                    <span class="svg-icon svg-icon-md ml-2">
                                        <!--begin::Svg Icon | path:assets/media/svg/icons/Navigation/Right-2.svg-->
                                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                <polygon points="0 0 24 0 24 24 0 24"></polygon>
                                                <rect fill="#000000" opacity="0.3" transform="translate(8.500000, 12.000000) rotate(-90.000000) translate(-8.500000, -12.000000)" x="7.5" y="7.5" width="2" height="9" rx="1"></rect>
                                                <path d="M9.70710318,15.7071045 C9.31657888,16.0976288 8.68341391,16.0976288 8.29288961,15.7071045 C7.90236532,15.3165802 7.90236532,14.6834152 8.29288961,14.2928909 L14.2928896,8.29289093 C14.6714686,7.914312 15.281055,7.90106637 15.675721,8.26284357 L21.675721,13.7628436 C22.08284,14.136036 22.1103429,14.7686034 21.7371505,15.1757223 C21.3639581,15.5828413 20.7313908,15.6103443 20.3242718,15.2371519 L15.0300721,10.3841355 L9.70710318,15.7071045 Z" fill="#000000" fill-rule="nonzero" transform="translate(14.999999, 11.999997) scale(1, -1) rotate(90.000000) translate(-14.999999, -11.999997)"></path>
                                            </g>
                                        </svg>
                                        <!--end::Svg Icon-->
                                    </span>
                                </button>

                                <button type="button" class="btn btn-primary font-weight-bolder font-size-h6 pl-8 pr-4 py-4 my-3" data-wizard-type="action-next">
                                    Next Step
                                    <span class="svg-icon svg-icon-md ml-1">
                                        <!--begin::Svg Icon | path:assets/media/svg/icons/Navigation/Right-2.svg-->
                                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                <polygon points="0 0 24 0 24 24 0 24"></polygon>
                                                <rect fill="#000000" opacity="0.3" transform="translate(8.500000, 12.000000) rotate(-90.000000) translate(-8.500000, -12.000000)" x="7.5" y="7.5" width="2" height="9" rx="1"></rect>
                                                <path d="M9.70710318,15.7071045 C9.31657888,16.0976288 8.68341391,16.0976288 8.29288961,15.7071045 C7.90236532,15.3165802 7.90236532,14.6834152 8.29288961,14.2928909 L14.2928896,8.29289093 C14.6714686,7.914312 15.281055,7.90106637 15.675721,8.26284357 L21.675721,13.7628436 C22.08284,14.136036 22.1103429,14.7686034 21.7371505,15.1757223 C21.3639581,15.5828413 20.7313908,15.6103443 20.3242718,15.2371519 L15.0300721,10.3841355 L9.70710318,15.7071045 Z" fill="#000000" fill-rule="nonzero" transform="translate(14.999999, 11.999997) scale(1, -1) rotate(90.000000) translate(-14.999999, -11.999997)"></path>
                                            </g>
                                        </svg>
                                        <!--end::Svg Icon-->
                                    </span>
                                </button>
                            </div>
                        </div>
                        <!--end: Wizard Actions-->
                        <div></div><div></div>
                    }
                </div>
                <!--end::Form-->
            </div>
            <!--end::Content-->
        </div>
        <!--end::Wizard 5-->
    </div>
    <!--end::Card Body-->
</div>




<script src="https://cdn.paysecurely.online/assets/js/pages/custom/wizard/wizard-5.js"></script>
